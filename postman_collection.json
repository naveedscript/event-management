{
  "info": {
    "name": "Event Ticketing API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "event_id",
      "value": ""
    },
    {
      "key": "order_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/health"
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/events",
              "host": ["{{base_url}}"],
              "path": ["events"],
              "query": [
                {"key": "status", "value": "published", "disabled": true},
                {"key": "upcoming", "value": "true", "disabled": true},
                {"key": "limit", "value": "10", "disabled": true},
                {"key": "offset", "value": "0", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Event",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/events/{{event_id}}"
          }
        },
        {
          "name": "Create Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.collectionVariables.set('event_id', jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": {\n    \"name\": \"Summer Concert 2026\",\n    \"description\": \"Annual summer music festival\",\n    \"venue\": \"Central Park\",\n    \"date\": \"2026-07-15T18:00:00Z\",\n    \"ticket_price\": \"75.00\",\n    \"total_tickets\": 1000\n  }\n}"
            },
            "url": "{{base_url}}/events"
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": {\n    \"name\": \"Summer Concert 2026 - Updated\",\n    \"ticket_price\": \"85.00\"\n  }\n}"
            },
            "url": "{{base_url}}/events/{{event_id}}"
          }
        },
        {
          "name": "Publish Event",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/events/{{event_id}}/publish"
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/events/{{event_id}}"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Purchase Tickets",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.collectionVariables.set('order_id', jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order\": {\n    \"customer_email\": \"john@example.com\",\n    \"customer_name\": \"John Doe\",\n    \"quantity\": 2,\n    \"idempotency_key\": \"unique-key-{{$timestamp}}\"\n  }\n}"
            },
            "url": "{{base_url}}/events/{{event_id}}/purchase"
          }
        },
        {
          "name": "List Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"],
              "query": [
                {"key": "customer_email", "value": "john@example.com", "disabled": true},
                {"key": "event_id", "value": "{{event_id}}", "disabled": true},
                {"key": "status", "value": "confirmed", "disabled": true},
                {"key": "limit", "value": "10", "disabled": true},
                {"key": "offset", "value": "0", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/orders/{{order_id}}"
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/orders/{{order_id}}/cancel"
          }
        }
      ]
    }
  ]
}
